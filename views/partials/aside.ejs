<aside>
    <div class="category">
        <p>Categories</p>
        <ul>
            <%if(categories.length != 0){%>
                <%categories.forEach(category => {%>
                    <li><a href="/category/<%=category._id%>"><%=category.name%></a></li>
            <%})} else {%>
                    <li>There are no categories to display...</li>
            <%}%>
        </ul>
    </div>
</aside>
